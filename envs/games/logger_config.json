{
  "version": 1,
  "disable_existing_loggers": false,

  "formatters": {
    "default": {
      "format": "%(asctime)s %(levelname)s %(name)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%SZ"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "default",
      "stream": "ext://sys.stdout"
    },
    "rerun": {
      "class": "rerun.LoggingHandler",
      "level": "INFO",
      "path_prefix": "logs/handler"
    }
  },

  "root": { "level": "INFO", "handlers": ["console", "rerun"] }
}
